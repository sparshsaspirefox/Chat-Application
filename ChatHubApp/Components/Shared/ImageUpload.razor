
<style>
    #upload-img-icon{
        font-size: 33px;
        position: relative;
        z-index: 1; /* Ensure the icon is above the input */
    }
    #img-input{
        opacity: 0;
        position: absolute;
        width: 100%; /* Match the width of the container */
        height: 100%; /* Match the height of the container */
        top: 0;
        left: 0;
        cursor: pointer; /* Make the cursor indicate that it's clickable */
        z-index: 2; /* Ensure the input is above the icon */
    }
</style>

<div style="position:relative;width:35px;" class="d-flex justify-content-center">
    <i class="fa fa-picture-o" id="upload-img-icon" aria-hidden="true"></i>
    <InputFile OnChange="@HandleImageSelected" id="img-input" multiple accept="image/jpeg, image/png" />
</div>

