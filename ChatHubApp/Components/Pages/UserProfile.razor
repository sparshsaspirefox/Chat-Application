@page "/profilePage/{UserId}"

<style>
    p{
        margin:0;
    }
    .profile-img{
        width:110px;
        height:110px;
        border-radius:50%;
    }

    .profile-icon{
        color:#999999;
        font-size:20px;
    }

    .profile-lbl{
        color: #999999;
        font-size:15px;
        margin-bottom: -2px;
    }
    .profile-field{

    }
    .edit-icon{
        color: #ffffff
    }

    .img-edit {
        display: flex;
        height: 29px;
        width: 29px;
        background-color: #7196FF;
        position: absolute;
        top: 78px;
        left: 78px;
        border-radius: 50%;
        justify-content: center;
        align-items: center;
    }

    .camera-icon{
        color:white;
        font-size:17px;
    }
</style>

<div class="container  p-0">

    <!--header -->
    <div style="background-color:#7196FF;padding:5px;position:fixed;top:0px;width:100%;">
        <p id="myP"></p>
        <div class="d-flex justify-content-between align-items-center px-2" style="color:white;font-size:20px;">
            <div class="d-flex align-items-center" @onclick="GoBack">
                <i class="fa fa-angle-left" style="font-size:34px;" aria-hidden="true"></i>
                <p class="ms-3">Profile</p>
            </div>

            @if (isEditable)
            {
                <i class="fa fa-pencil edit-icon" @onclick="EditMode" aria-hidden="true"></i>
            }
        </div>
    </div>

    @* profile image *@
    <div class="d-flex justify-content-center mt-5">
        <div class=" position-relative">
            <img class="profile-img" src=".\imagePlace.jpg" />
            @if (isEditMode)
            {
                <div class="img-edit">
                    <InputFile OnChange="@OnInputFileChange" />
                    <i class="fa fa-camera camera-icon" aria-hidden="true"></i>
                </div>
            }
            </div>
        
    </div>


    <div class="container p-4">
        
        @* name *@
        <div class="d-flex  align-items-center">
                <i class="fa fa-user profile-icon" aria-hidden="true"></i>
                <div class="ms-3">
                    <p class="profile-lbl">Name</p>
                    @if (isEditMode)
                    {
                        <input type="text" style="border:0px;outline: none; width:100%;" @bind-value="@user.Name" placeholder="Enter name" />
                    }
                    else
                    {
                        <p class="profile-field">@user.Name</p>
                    }
                    
                </div>

        </div>


        @* About *@
        <div class="d-flex  mt-3 align-items-center">
                <i class="fa fa-info-circle profile-icon" aria-hidden="true"></i>
                <div class="ms-3">
                    <p class="profile-lbl">About</p>
                    @if (isEditMode)
                    {
                        <input type="text" style="border:0px;outline: none; width:100%;" placeholder="Enter name" />
                    }
                    else
                    {
                        <p class="profile-field">This field has to update</p>
                    }

            </div>
        </div>


        @* mobile number *@
        <div class="d-flex mt-3 align-items-center">
                <i class="fa fa-phone profile-icon" aria-hidden="true"></i>
                <div class="ms-3">
                    <p class="profile-lbl">Phone</p>
                    <p class="profile-field">@user.PhoneNumber</p>
                </div>
        </div>

        @if (isEditMode)
        {
            <div class="d-flex justify-content-center mt-5">
                <button type="submit" @onclick="UpdateProfile" class="btn me-3" style="background-color:#7196FF;color:white">Save</button>
                <button type="button" onclick="@CancelEditing" class="btn btn-light ms-3">Cancel</button>
            </div>
        }
    </div>

   

</div>